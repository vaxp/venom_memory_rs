[Unit]
Description=Venom Audio Daemon - PulseAudio Control Service
Documentation=https://github.com/vaxp/venom-audio
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=/usr/bin/venom_audio
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical-session.target
